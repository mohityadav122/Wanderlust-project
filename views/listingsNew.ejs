<% layout("/layouts/boilerplate") %>
<div class ="row mt-2">
    <div class ="col-md-8 offset-2">
<body>
   
    <h2>Create new Listing</h2>

    <form method = "POST" action = "/listings"  novalidate class = "needs-validation" enctype = "multipart/form-data">
        <div class = "mb-3">
        <lable for ="title" class =  "form-lable">Title</lable>
        <input name = "listing[title]" placeholder = "enter title" type = "text" class ="form-control" required>
        <div class = "valid-feedback">Titel Good</div>
    </div>
    <div class = "mb-3">
        <lable for ="description" class =  "form-lable" >Description</lable>
        <textarea name = "listing[description]" class ="form-control"  required></textarea>
        <div class = "invalid-feedback">pleas given s short description</div>
            </div>
            
    
    <div  class = "mb-3" >
        <lable for ="image" class =  "form-lable" > Upload  Listing Image</lable>
<input name = "listing[image]"  type = "file" class ="form-control" required>

</div>
    <div class = "row">
    <div  class = "mb-3 col-md-4">
        <lable for ="price" class =  "form-lable">Price</lable>
        <input name = "listing[price]" placeholder = "enter RS" type = "number"  class ="form-control"  required>
        <div class = "invalid-feedback">pleas enter a valid price</div>
    </div>
    <div class = "mb-3 col-md-8">
        <lable for ="country" class =  "form-lable">Country</lable>
       <input name = "listing[country]" placeholder = "country Name" type = "text" class ="form-control"  required>
       <div class = "invalid-feedback">pleas enter a valid country</div>
    </div>
</div>
    <div class = "mb-3">
        <lable for ="location" class =  "form-lable">Location</lable>
       <input name = "listing[location]" placeholder = "location" type = "text"  class ="form-control"  required>
       <div class = "invalid-feedback">pleas enter a valid location</div>
    </div>
    
    <br><br>
       <button class = "btn btn-dark add-btn mb-3"  >Add</button>


    </form>
</body>
</div>
</div>
